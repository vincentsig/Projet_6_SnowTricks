{% extends 'base.html.twig' %}
 
{% block title %}Mot de passe oublié{% endblock %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <div class="container mt-4">
    <h1>Réinitialisé votre mot de passe</h1>
      <div class="container mt-4">
    <h1>Mot de passe oublié</h1>
    {{ form_start(form)}}
    {{ form_row(form.password.first, {'label': 'Mot de passe', 'attr': {'placeholder':'Mot de passe...'}}) }}
    {{ form_row(form.password.second, {'label': 'Confirmez votre mot de passe', 'attr': {'placeholder':'Confirmer votre Mot de passe...'}}) }}
    {{form_widget(form)}}
    <button type="submit" class="btn btn-success">Envoyer</button>
    {{form_end(form)}}
</div>
{% endblock %}