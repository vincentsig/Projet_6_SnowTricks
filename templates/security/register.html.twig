{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}
	<div class="container mt-4">
		<h1>Inscription</h1>
		{{ form_start(form)}}
		{{ form_row(form.username, {'label': 'Nom d\'utilisateur', 'attr': {'placeholder':'Nom d\'utilisateur...'}}) }}
		{{ form_row(form.email, {'label': 'Adresse email', 'attr': {'placeholder':'Adresse email...'}}) }}
		{{ form_row(form.password.first, {'label': 'Mot de passe', 'attr': {'placeholder':'Mot de passe...'}}) }}
		{{ form_row(form.password.second, {'label': 'Confirmation du mot de passe', 'attr': {'placeholder':'Ressaisissez votre mot passe...'}}) }}
		{{form_widget(form)}}
		<button type="submit" class="btn btn-success">Inscription</button>
		{{form_end(form)}}
	</div>
{% endblock %}
